<div class="login-container">
<div class="left-section-inscription">
</div>

  <div class="right-section">

    <div class="login-navbar">
      <div class="nav-left">
        <%= link_to root_path, class: "login-nav-home" do %>
          <%= image_tag "logo_home.png", alt: "Logo maison", class: "home-logo" %>
          <i class="fas fa-home"></i> Accueil
        <% end %>
      </div>
      <div class="nav-right">
        <%= image_tag "logo_chat.png", alt: "Logo chat", class: "login-nav-logo" %>
      </div>
    </div>

    <h2 class="login-title">Inscription</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, "Email", class: "form-label" %>
        <div class="input_form">
          <%= image_tag "user_form.png", alt: "user", class: "logo-input-form" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "exemple@gmail.com", class: "form-input" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, "Mot de passe", class: "form-label" %>
        <div class="input_form">
          <%= image_tag "locker_form.png", alt: "locker", class: "logo-input-form" %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "********", class: "form-input" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmation mot de passe", class: "form-label" %>
        <div class="input_form">
          <%= image_tag "locker_form.png", alt: "locker", class: "logo-input-form" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "********", class: "form-input" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "S'inscrire", class: "btn-signup" %>
      </div>
    <% end %>

    <div class="login-link">
      <p class="already-account-text">
        Vous avez déjà un compte ? <%= link_to "Se connecter", new_session_path(resource_name), class: "link-login" %>
      </p>
    </div>
  </div>
</div>
