  <%= form.label :price, "Prix en euros", class: "infoadd" %> </br>
  <%= form.number_field :price,placeholder: "30", step: 0.01, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :avatar, "Uploader l'avatar", class: "infoadd" %> </br>
  <%= form.file_field :avatar, class: "" %>
