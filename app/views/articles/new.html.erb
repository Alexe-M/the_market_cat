<h1>Ajouter un nouvel article:</h1>

<%= form_with model: @article, local: true do |form| %>

<div class="form-group">
  <%= form.label :name, "Nom de l'article" %>
  <%= form.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :description, "Description de l'article" %>
  <%= form.text_field :description, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :price, "Prix en euros" %>
  <%= form.number_field :price, step: 0.01, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :avatar, "Uploader l'avatar" %>
  <%= form.file_field :avatar, class: "form-control" %>
</div>

