<div class = "jumbotron">
  <%= render 'layouts/navbar' %>
    <div class = "container_jumbo">
        <div class = "text-content">
            <h1>The Market Cat</h1>
            <h3>"Des chats qui ne griffent pas..."</h3>
        </div>
        <div class="image-container">
            <%= image_tag("imageJumbo.png", alt: "Cat", class: "img_jumbo") %>
        </div>
    </div>
</div>


<div class="articles-container">
  <h2>Articles :</h2>
  <div class="grid">
    <% @articles.each do |article| %>
      <div class="article_img">
      <%= link_to article_path(article) do %>
        <%= image_tag("imageJumbo.png", alt: "Cat", class: "img_article") %>
        <div class="border_article">
            <p class="article_name"><%= article.name %> <br>
            <strong><%= number_to_currency(article.price, unit: "â‚¬ ")  %></strong>
            </p>
        </div>
        <% end %>
    </div>
    <% end %>
  </div>
</div>


<div class = "pagination">
<%= paginate @articles %>
</div>
